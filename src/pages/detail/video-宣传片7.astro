---
import DetailPostLayout from 'src/layouts/DetailPostLayout.astro';

const title = '匠心皮影-非遗文化';
const description = '非遗文化';
const keywords = '匠心皮影-非遗文化, 作品集, 视频展示';
---
<DetailPostLayout title={title} description={description} keywords={keywords}>
  <main>
    <section class="project-intro">
      <h1>{title}</h1>
      <p>{description}</p>
    </section>
    <section class="project-content">
      <h2>视频展示</h2>
      <video controls poster="/assets/cover/匠心皮影-非遗文化.png"> <!-- 添加封面图片 -->
        <source src="/assets/videos/匠心皮影-非遗文化.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </section>
  </main>
</DetailPostLayout>

<style>
  .project-content {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 2rem 0;
    padding: 2rem;
    background: linear-gradient(135deg, rgb(40, 40, 40) 0%, rgb(54, 54, 54) 100%);
    border-radius: 16px;
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
    color: white;
  }

  video {
    width: 100%;
    max-width: 800px;
    border-radius: 12px;
    border: 4px solid rgba(255, 255, 255, 0.5);
    animation: border-pulse 2s infinite;
  }

  @keyframes border-pulse {
    0% {
      border-color: rgba(255, 255, 255, 0.5);
    }
    50% {
      border-color: rgba(255, 255, 255, 0.8);
    }
    100% {
      border-color: rgba(255, 255, 255, 0.5);
    }
  }

  h2 {
    margin-bottom: 1rem;
    font-size: 1.5rem;
    text-align: center;
    color: white;
  }
</style>