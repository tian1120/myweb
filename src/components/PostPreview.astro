---
import type { CollectionEntry } from 'astro:content';
interface Props {
	post: CollectionEntry<'blog'>;
}
const { data, slug } = Astro.props.post;
---

<a href={`/blog/${slug}`} class="post-item border-bottom">
	<div class="post-title">
		<h3>
			{data.title}
		</h3>
		<span class="publish-date">
			{data.publishDate.toISOString().split('T')[0]}
		</span>
		
	</div>
	<div class="post-icon">
		<div class="icon">
			<svg width="18" height="18" viewBox="0 0 18 18" 	fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M10.278 3.21298C10.2082 3.1421 10.125 3.08581 10.0333 3.04739C9.94151 3.00897 9.84303 2.98918 9.74356 2.98918C9.64409 2.98918 9.54561 3.00897 9.45386 3.04739C9.36211 3.08582 9.27892 3.14211 9.20913 3.21299C9.13934 3.28387 9.08435 3.36793 9.04736 3.46027C9.01037 3.55261 8.99211 3.65138 8.99366 3.75084C8.99521 3.8503 9.01652 3.94846 9.05637 4.0396C9.09621 4.13075 9.15379 4.21305 9.22575 4.28173L13.2525 8.24998L3 8.24998C2.80109 8.24998 2.61032 8.329 2.46967 8.46965C2.32902 8.6103 2.25 8.80107 2.25 8.99998C2.25 9.19889 2.32902 9.38966 2.46967 9.53031C2.61032 9.67096 2.80109 9.74998 3 9.74998L13.2487 9.74998L9.225 13.7137C9.08686 13.854 9.00943 14.043 9.00943 14.2399C9.00943 14.4368 9.08685 14.6258 9.22499 14.7661C9.36313 14.9064 9.5509 14.9868 9.74777 14.9898C9.94464 14.9929 10.1348 14.9184 10.2772 14.7825L15.471 9.66523C15.5594 9.57801 15.6297 9.47409 15.6776 9.3595C15.7255 9.24491 15.7502 9.12194 15.7502 8.99773C15.7502 8.87352 15.7255 8.75055 15.6776 8.63596C15.6297 8.52137 15.5594 8.41745 15.471 8.33023L10.2772 3.21298L10.278 3.21298Z" fill="var(--color-100)"/>
			</svg>
		</div>
	</div>
</a>


<style lang="scss">
	.post{
		&-item{
			align-content: center;
			align-items: center;
			cursor: pointer;
			display: flex;
			flex-direction: row;
			flex-wrap: nowrap;
			gap: 24px;
			height: min-content;
			justify-content: space-between;
			padding: 2rem 12px;
			position: relative;
			text-decoration: none;
			width: 100%;
			transition: all 0.25s ease-in-out;
			&:nth-child(n):hover{
				background: var(--color-yellow);
			}
			&:nth-child(2n):hover{
				background: var(--color-blue);
			}
			&:nth-child(3n):hover{
				background: var(--color-green);
			}
			&:hover .post-icon .icon {
				transform: rotate(-45deg);
				border: 1px solid var(--color-900);
				background: var(--color-900);
			}

		}
		&-title{
			height: auto;
			position: relative;
			word-break: break-word;
			word-wrap: break-word;
			h3{
				line-height:1.3em;
				text-align: left;
				color:var(--color-100)
			}
		}
		&-icon{
			align-content: center;
			align-items: center;
			display: flex;
			flex: none;
			flex-direction: row;
			flex-wrap: nowrap;
			gap: 0px;
			height: min-content;
			justify-content: center;
			overflow: hidden;
			position: relative;
			width: min-content;
			.icon{
				transition: all 0.25s ease-in-out;
			}
			svg{
				transition: all 0.25s ease-in-out;
			}
		}
	}

	.icon{
		padding:10px;
		border-radius: 36px;
		border: 1px solid var(--color-700);
		display: inline-block;
		margin: 0;
		font-size: 0;
	}
	.icon svg{
		height: 20px;
		width: 20px;
	}

	.publish-date{
		font-size:0.875rem;
		color:var(--color-500);
		margin:0.5rem 0 0;
		font-weight: 400;
	}
</style>
